<body class="bg">
    <br>
    <div class="container">

        <div class="jumbotron" style="background-color: blanchedalmond;">
            <!-- Template Needs to be implemented at a later time -->
            <h1 class="display-4" style="font-family:''"><center><strong>Creating a GoFish Account</strong></center></h1>
            
            <br>

            <hr class="my-4">

            <p><strong><center>Fill out all information below (all fields are required!)</center></strong></p>
            <br><br>


            

            <form style="background-color: blanchedalmond;" method="post" action="/registration">
                <!--Display name and user handle, similar to how Twitter has an @ and a display name - Spencer-->
                <div class="form-group">
                    <label class="sr-only" for="firstname">First name</label>
                    <input type="text" required class="form-control" required = "required" id="firstname" oninput="invalidusernames(id);" placeholder="First name" size="10" name="first_name">
                </div>

                <div class="form-group">
                    <label class="sr-only" for="lastname">Last name</label>
                    <input type="text" required class="form-control" required = "required" id="lastname" oninput="invalidusernames(id);" placeholder="Last name" size="10" name="last_name">
                </div>
                
                <div class="form-group">
                    <label class="sr-only" for="displayName">User Name</label>
                    <input type="text" required class="form-control" required = "required" id="displayName" oninput="invalidusernames(id);" placeholder="User Name" size="10" name="user_name">
                </div>

                <br>

                <div class="form-group">
                  <label class="sr-only" for="email">Email Address</label>
                  <input type="email" required class="form-control" required="required" id="email" placeholder="Email" name="email">
              </div>
  
                <div class="form-group">
                    <label class="sr-only" for="pword">Password</label>
                    <input type="password" required = "required" class="form-control" id="pword" placeholder="Password" name="password1">
                </div>
    
                <div class="form-group">
                    <label class="sr-only" for="confirmpword">Confirm Password</label>
                    <input name="password2" type="password" required = "required" class="form-control" id="confirmpword" placeholder="Confirm Password">
                </div>
    
                <br>
                <% var errMsg = ''; %>
        <% if (error) {
            errMsg += `<div class="alert alert-danger" role="alert">
                ${error}
              </div>`; %>
        <% } %>
        <%- errMsg %>

