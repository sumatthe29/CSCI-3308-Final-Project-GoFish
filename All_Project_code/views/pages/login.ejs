<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
	<link rel="stylesheet" href="/views/css/login.css" type="text/css">
</head>
<body style="background-image: url(..../img/login_background.jpg); background-repeat: no-repeat; background-size: cover;">
	<div class="container">

		<h1>Login with your account information</h1>

		<div class="form-group">

			
<br>
			
			<form action="/login" method="post"> 

				<div class="row" id="uoption">
					<label for="uname"> </label>
					<input class="form-control input-sm" type="text" name ="uname" id="uname" placeholder="Enter your username">
				</div>
				
				Use email instead?
				<label for="yesEmail"> Yes </label>
				<input class="form-check-input" onclick="byEmail(1)"  type="radio" name="Question" id="yesEmail"  value="Yes">
				<label for="noEmail"> No </label>
				<input class="form-check-input" onclick="byEmail(0)"  type="radio" name="Question" id="noEmail"  value="No" checked>
	
				<div class="row" id="eoption" style="visibility:hidden">
					<label for="email"> </label>
					<input class="custom-select input-sm" type="email" name="email" id="email" placeholder="Enter your email">
				</div>
	
				<label for"password"> </label>
				<input class="form-control input-sm" type="password" name = "password" id="password" placeholder="Enter your password">
				<input type="submit" class="btn btn-primary btn-block">
			</form>
			<% var errMsg = ''; %>
			<% if (error) {
				errMsg += `<div class="alert alert-danger" role="alert">
					${error}
				  </div>`; %>
			<% } %>
			<%- errMsg %>
		</div>
	</div>

</body>
</html>